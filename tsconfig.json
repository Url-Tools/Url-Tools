{
  "$schema": "https://json.schemastore.org/tsconfig",
  "declaration": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
